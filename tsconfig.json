{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"noEmit": true,
		"noImplicitAny": true,
		"allowJs": true,
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"noUncheckedSideEffectImports": true
	},
	"include": [
		"packages/**/src/**/*.ts",
		"packages/**/src/**/*.js",
		"packages/**/src/**/*.svelte",
		"packages/**/tests/**/*.ts",
		"packages/**/tests/**/*.js",
		"packages/**/tests/*/*.svelte",
		"**/tailwind.config.js",
		"**/postcss.config.cjs",
		"**/vite.config.ts",
		"**/svelte.config.js"
	],
	"exclude": ["**/assets/**/*", "node_modules", "dist"]
}
